<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id= "new-form" action="/flights" method="POST">
    <label for="airline-input">Airline
      <select name="airline" value="<%= flight.airline %>"" id="airline-input">
        <option value="American">American</option>
        <option value="United">United</option>
        <option value="Southwest">Southwest</option>
        <option value="PanAm">PanAm</option>
      </select>
    </label><br>
    <label>Airport
      <select name="airport" value="<%= flight.aiport %>" id="airport-input">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </label><br>
    <label>Flight Number
      <input type="text" name="flightNo" value="<%= flight.flightNo %>" id="flightNo-input">
    </label><br>
    <label>Now Showing:
      <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="departs-input">
    </label><br>
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>